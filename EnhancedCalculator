import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

public class EnhancedCalculator extends JFrame implements ActionListener {
    private JTextField display = new JTextField();
    private String currentOp = "";
    private double stored = 0;
    private boolean startNew = true;

    public EnhancedCalculator() {
        display.setHorizontalAlignment(JTextField.RIGHT);
        display.setEditable(false);
        add(display, BorderLayout.NORTH);

        JPanel keys = new JPanel(new GridLayout(4,4,4,4));
        String[] labels = {
            "7","8","9","/",
            "4","5","6","*",
            "1","2","3","-",
            "0",".","=","+"
        };
        for (String s : labels) {
            JButton b = new JButton(s);
            b.addActionListener(this);
            keys.add(b);
        }
        add(keys, BorderLayout.CENTER);
        pack();
        setTitle("Enhanced Calculator");
        setLocationRelativeTo(null);
        setDefaultCloseOperation(EXIT_ON_CLOSE);
    }

    @Override
    public void actionPerformed(ActionEvent e) {
        String cmd = e.getActionCommand();
        if ("0123456789.".contains(cmd)) {
            if (startNew) { display.setText(cmd); startNew = false; }
            else display.setText(display.getText() + cmd);
        } else if ("+-*/".contains(cmd)) {
            stored = Double.parseDouble(display.getText());
            currentOp = cmd;
            startNew = true;
        } else if ("=".equals(cmd)) {
            double val = Double.parseDouble(display.getText());
            double result = 0;
            switch (currentOp) {
                case "+": result = stored + val; break;
                case "-": result = stored - val; break;
                case "*": result = stored * val; break;
                case "/": result = stored / val; break;
                default: result = val;
            }
            display.setText(String.valueOf(result));
            startNew = true;
            currentOp = "";
        }
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> new EnhancedCalculator().setVisible(true));
    }
}
